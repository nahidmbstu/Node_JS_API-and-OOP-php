  <thead>
    <tr>
      <th>title</th>
      <th>Name</th>
      <th>img</th>
      
    </tr>
  </thead>
  <tbody>
    <tr>
     
      <td><?php echo($a);?></td>
      <td><?php echo($b); ?></td>
      <td><img src="<?php echo $c;?>" id="imgdata" width = "200" height= "150"></td>
     
    </tr>
    
    
  </tbody>
</table>




