<?php

$data = file_get_contents("https://api.flickr.com/services/feeds/photos_public.gne");

$xml= simplexml_load_string($data);

$json = json_encode($xml);

$data = json_decode($json ,true);


$t=  $data['entry'];


foreach ($t as  $v) {
	   
	   $a = $v['title'];

	   $b =  $v['author']['name'];

	   $c = $v['link']['1']['@attributes']['href'];



	 
?>

